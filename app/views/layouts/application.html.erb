<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="/favicon.ico" rel="shortcut icon" />

    <% style = content_for?(:stylesheet) ? yield(:stylesheet) : 'application' %>
    <%= stylesheet_link_tag style, media: 'all' %>

    <%= include_gon %>
    <%= javascript_include_tag "locales/#{I18n.locale}" %>
    <%= javascript_include_tag 'application' %>

    <%= yield(:scripts) if content_for?(:scripts) %>

    <%= render 'shared/html5' %>
    <%= render 'shared/meta' %>

    <%= csrf_meta_tags %>
  </head>

  <body data-lang="<%= locale_name %>" id="<%= body_id %>">
    <%= render 'shared/alert' %>

    <div id="wrap">
      <%= content_for?(:header) ? yield(:header) : render('shared/header') %>
      <%= content_for?(:frame) ? yield(:frame) : render('shared/frame') %>

      <div id="push"></div>
    </div>

    <%= content_for?(:footer) ? yield(:footer) : render('shared/footer') %>
  </body>
</html>
