<% translation_data = { currency: currency.code.upcase } %>
<% coin_proof       = instance_variable_get(:"@#{currency.code.downcase}_proof") %>
<% coin_account     = instance_variable_get(:"@#{currency.code.downcase}_account") %>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div id="guide" class="col-xs-8">
        <h3><%= t('.title', translation_data) %></h3>
        <p class="text-ignore"><%= t('.intro', translation_data) %></p>
      </div>
      <div id="content" class="col-xs-16">
        <div class="jumbotron">
          <div class="row">
            <div class="col-xs-offset-4 col-xs-16">
              <span class="pull-left"><%= t('.total', translation_data) %></span>
              <span class="pull-right">
                <%= coin_proof.asset_sum %>
              </span>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="row">
            <table class="table">
              <thead>
                <tr>
                  <td>
                    <%= t('.address', translation_data) %>
                  </td>
                  <td>
                    <%= t('.balance', translation_data) %>
                  </td>
                </tr>
              </thead>
              <tbody>
                <% coin_proof.addresses.each do |entry| %>
                  <tr>
                    <td>
                      <%= link_to entry['address'], coin_proof.address_url(entry['address']) %>
                    </td>
                    <td>
                      <%= entry['balance'] %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
