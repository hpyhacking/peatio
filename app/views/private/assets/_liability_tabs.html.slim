.tabbable
  ul.nav.nav-tabs
    li.active: a.btc-proof href="#btc-proof" data-toggle="tab" == t('.verify-btc')
    li:        a.xrp-proof href="#xrp-proof" data-toggle="tab" == t('.verify-xrp')
    li:        a.usd-proof href="#usd-proof" data-toggle="tab" == t('.verify-usd')

  .tab-content
    #btc-proof.tab-pane.active: .trade-wrapper
      .assets
        span.title = t('.btc-assets-total')
        span.currency
          == t("currency.icon.btc")
          = @btc_proof.sum
      = render 'liability_data', account: @btc_account, proof: @btc_proof

    #xrp-proof.tab-pane.active: .trade-wrapper
      .assets
        span.title = t('.xrp-assets-total')
        span.currency
          == t("currency.icon.xrp")
          = @xrp_proof.sum
      = render 'liability_data', account: @xrp_account, proof: @xrp_proof

    #usd-proof.tab-pane:        .trade-wrapper
      .assets
        span.title = t('.usd-assets-total')
        span.currency
          == t("currency.icon.usd")
          = @usd_proof.sum
      = render 'liability_data', account: @usd_account, proof: @usd_proof
