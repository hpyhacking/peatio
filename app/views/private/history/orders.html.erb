<% content_for :frame do %>
  <div class="container history-pages">
    <%= render 'tabs', active: :order %>

    <div class="panel panel-default" id="orders">
      <div class="panel-body">
        <div class="col-xs-24">
          <table class="table table-condensed table-striped">
            <thead>
              <tr>
                <th><%= t('.id') %></th>
                <th><%= t('.type') %></th>
                <th><%= t('.state') %></th>
                <th><%= t('.market') %></th>
                <th><%= t('.price') %></th>
                <th><%= t('.volume') %></th>
                <th><%= t('.average_price') %></th>
                <th><%= t('.fullfilled_volume') %></th>
                <th><%= t('.timestamp') %></th>
              </tr>
            </thead>
            <tbody class="list">
              <%= render partial: 'order', collection: @orders %>
            </tbody>
          </table>
          <div class="pull-right">
            <%= paginate @orders %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
