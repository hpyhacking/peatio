connect:
  host: 127.0.0.1
  port: 5672

exchange:
  trade:
    name: peatio.trade
    type: headers
  notification:
    name: peatio.notification
    type: direct
  orderbook:
    name: peatio.orderbook
    type: fanout

queue:
  matching:
    name: peatio.matching
    durable: true
  slave_book:
    name: peatio.orderbook.slave
  new_trade:
    name: peatio.trade.new
    durable: true
  order_processor:
    name: peatio.order.processor
    durable: true
  market_ticker:
    name: peatio.trade.market_ticker
  pusher_market:
    name: peatio.pusher.market
  pusher_member:
    name: peatio.pusher.member
  withdraw_audit:
    name: peatio.withdraw.audit
  withdraw_coin:
    name: peatio.withdraw.coin
  deposit_coin_address:
    name: peatio.deposit.coin.address
    durable: true
  email:
    name: peatio.notification.email
    durable: true
  sms:
    name: peatio.notification.sms
    durable: true

binding:
  matching:
    queue: matching
  slave_book:
    queue: slave_book
    exchange: orderbook
  trade_executor:
    queue: new_trade
  order_processor:
    queue: order_processor
  market_ticker:
    queue: market_ticker
    exchange: trade
  pusher_market:
    queue: pusher_market
    exchange: trade
  pusher_member:
    queue: pusher_member
  withdraw_audit:
    queue: withdraw_audit
  withdraw_coin:
    queue: withdraw_coin
  deposit_coin_address:
    queue: deposit_coin_address
  email_notification:
    queue: email
    exchange: notification
  sms_notification:
    queue: sms
    exchange: notification
