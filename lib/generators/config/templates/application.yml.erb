defaults: &defaults
  TIMEZONE: 'Paris'

  REDIS_URL: redis://redis:6379
  REDIS_PASSWORD: changeme

  # admin role account
  ADMIN: 'admin@peatio.tech'

  # site host
  URL_HOST: localhost:3000
  URL_SCHEME: http

  # session expire time (seconds)
  SESSION_EXPIRE: '60'

  # This secret key is used for verifying digital signatures of cookies.
  #
  # You can generate one by running:
  #
  #   bundle exec rake secret
  #
  # Development and test environments already include sample secret keys.
  COOKIES_SECRET_KEY: ~

  # This secret key is used for verifying JSON Web Tokens.
  #
  # Request this key from your JWT provider or generate one by running:
  #
  #   ruby -e "require 'openssl'; require 'base64'; print Base64.urlsafe_encode64(OpenSSL::PKey::RSA.generate(2048).to_pem)"
  #
  # Then send this token to your JWT provider.
  # Peatio and JWT provider should have the same key.
  # You may want to adjust key length or cipher.
  #
  # Development and test environments already include sample secret keys.
  #
  # You can generate valid JWT by running:
  #
  #   JWT.encode(payload, APIv2::Auth::Utils.jwt_shared_secret_key, 'RS256')
  #
  # To authenticate using JWT send it's value in "Authorization" header:
  #
  #   curl -H "Authorization: Bearer TOKEN" http://localhost:3000/api/v2/members/me
  #
  JWT_SHARED_SECRET_KEY: ~

  # email notifications settings (only for production)
  SMTP_PORT: YOUR_SMTP_PORT
  SMTP_DOMAIN: YOUR_SMTP_DOMAIN
  SMTP_ADDRESS: YOUR_SMTP_ADDRESS
  SMTP_USERNAME: YOUR_SMTP_USERNAME
  SMTP_PASSWORD: YOUR_SMTP_PASSWORD
  SMTP_AUTHENTICATION: plain # could be plain, login or cram_md5

  # email accounts
  SUPPORT_MAIL: support@peatio.tech
  SYSTEM_MAIL_FROM: system@peatio.tech
  SYSTEM_MAIL_TO: group@peatio.tech
  OPERATE_MAIL_TO: support@peatio.tech

  # WebSocket Streaming API settings
  WEBSOCKET_HOST: 0.0.0.0
  WEBSOCKET_PORT: '8080'

  # Uncomment following lines to enable secure WebSocket (wss)
  # WEBSOCKET_SSL_KEY: 'your_server.key'
  # WEBSOCKET_SSL_CERT: 'your_server.crt'

  # pusher settings
  PUSHER_APP: '65910'
  PUSHER_KEY: 50d404c35db92d736a57
  PUSHER_SECRET: 75d6e6685209cc60cc4d
  PUSHER_HOST: api.pusherapp.com
  PUSHER_PORT: '80'
  PUSHER_WS_PORT: '80'
  PUSHER_WSS_PORT: '443'
  PUSHER_ENCRYPTED: 'on'

  # twilio setting (https://github.com/twilio/twilio-ruby)
  TWILIO_NUMBER: YOUR_TWILIO_NUMBER
  TWILIO_SID: YOUR_TWILIO_SID
  TWILIO_TOKEN: YOUR_TWILIO_TOKEN

  # Configuration variables for sign in with Google.
  # See https://github.com/zquestz/omniauth-google-oauth2
  GOOGLE_OAUTH2_SIGN_IN:      ~ # Set to "on" to enable.
  GOOGLE_CLIENT_ID:
  GOOGLE_CLIENT_SECRET:
  GOOGLE_OAUTH2_REDIRECT_URL: ~ # Specify URL address to which user will be redirected after successful sign in.

  # Configuration variables for sign in with Auth0.
  # See https://github.com/auth0/omniauth-auth0
  AUTH0_OAUTH2_SIGN_IN:       ~ # Set to "on" to enable.
  AUTH0_OAUTH2_DOMAIN:
  AUTH0_OAUTH2_CLIENT_ID:
  AUTH0_OAUTH2_CLIENT_SECRET:
  AUTH0_OAUTH2_REDIRECT_URL:  ~ # Specify URL address to which user will be redirected after successful sign in.

