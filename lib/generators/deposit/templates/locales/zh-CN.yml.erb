zh-CN:
  currency:
    name:
      <%= code %>: <%= name %>
    code:
      <%= code %>: <%= code.upcase %>
    format:
      <%= code %>: '0.0000'
    icon-large:
      <%= code %>: <span class='big-currency'><%= symbol %></span>
    icon:
      <%= code %>: <span class='currency'><%= symbol %></span>

  deposit_channel:
    <%= name.underscore %>:
      key: 块链
      title: <%= name %> 充值
      intro: 从本地钱包客户端或任意在线钱包客户端转出 <%= name %> 到我们为您提供的充值地址。
      latency: 10 分钟到账
      transfer: 自动
      go: 立即充值

  activerecord:
    attributes:
      deposits/<%= name.underscore %>:
        created_at: 时间
        txid: 交易哈希
        amount: 充值数量
        confirmations: 确认数
        aasm_state_text: 状态

  deposits/<%= name.underscore %>:
    aasm_state:
      submitted: 受理中
      accepted: 充值成功
      checked: 充值成功
      warning: 异常

  guides:
    private:
      deposits:
        <%= name.underscore.pluralize %>:
          panel: <%= name %>充值
          intro: 从本地钱包客户端或任意在线钱包客户端转出 <%= name %> 到我们为您提供的充值地址。
          new:
            default-panel: 充值记录

  admin:
    deposits:
      <%= name.underscore.pluralize %>:
        update:
          notice: 此笔充值已经成功到账。
        index:
          accept: 立即充值
          accept_confirm: 确定立刻确认此充值？

  private:
    deposits:
      <%= name.underscore.pluralize %>:
        new:
          step-1: 第一步
          open-wallet: 请使用您常用的钱包服务，本地钱包、在线钱包或移动端的钱包，选择付款或发送。
          step-2: 第二步
          send-coin: 在您的钱包付款或发款中,复制以下专门为您充值准备的⽐特币地址,在金额中填入您希望充值到账的数量,
                    同时别忘记支付⼀定的矿⼯费以保证交易尽快被全网确认。您也可以在移动端钱包中扫描二维码来进⾏行支付。
                    您可以重复使用此⽐特币地址和二维码进⾏行充值。
          or: 您也可以
          scan-qr: 在移动端钱包中扫描二维码来进行支付。
          step-3: 第三步
          check-confirm: 完成以上操作后点击发送付款,此交易将被广播到全⺴,您便可以这⾥查看到此笔交易的状态,
                        当交易达到全⺴1个确认 (⼤约10⾄至60分钟) 时,系统将自动充值到账。
                        您可以到<a href='%{path}'>资产公开</a>中查询。
          check-link: 您可以到 %{link} 中查询。
          step-4: 第四步
          history_html: 当您在您的钱包中完成发送付款的操作后,点击<a href='javascript:window.location.reload();'>刷新</a>,就能在⻚面下⽅历史纪录中查看到您当前的充值状态。
